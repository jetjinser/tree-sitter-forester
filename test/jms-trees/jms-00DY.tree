\title{morphisms of adjunctions}
\date{2023-11-09}
\author{jonmsterling}
\taxon{definition}


\import{base-macros}

\let\K{#{\mathcal{K}}}

\let\cata0{catc}
\let\cata1{catd}
\let\catb0{cate}
\let\catb1{catf}

\p{Let \K be a [bicategory](jms-000E), and let #{A \equiv \prn{l_A\dashv r_A\colon A_1\to A_0}} and #{B \equiv \prn{l_B\dashv r_B\colon B_1\to B_0}} be a pair of adjunctions in \K. Then a \em{(left and right) lax morphism} \Mor{f}{A}{B} between the two adjunctions is given by a pair of maps \Mor{f_0}{A_0}{B_0} and \Mor{f_1}{A_1}{B_1} together with a pair of mates \Mor{l_f}{l_B\circ f_0}{f_1\circ l_A} and \Mor{r_f}{f_0\circ r_A}{r_B\circ f_1} as depicted below:}

\texfig{
  \begin{tikzpicture}[scale=0.5,baseline=($(nw)!0.5!(se)$)]
    \CreateRect{5}{3}
    \path
      coordinate[label=above:$\strut f_0$] (f0) at (spath cs:north 0.5)
      coordinate[label=above:$\strut l_B$] (lB) at (spath cs:north 0.75)
      coordinate[label=below:$\strut l_A$] (lA) at (spath cs:south 0.25)
      coordinate[label=below:$\strut f_1$] (f1) at (spath cs:south 0.5)
    ;
    \draw[spath/save = f01] (f0) to (f1);
    \draw[spath/save = lBA] (lB) to[out=-90,in=90] (lA);
    \path[name intersections={of=f01 and lBA}]
      coordinate[dot,label=-10:$l_f$] (lf) at (intersection-1)
    ;
    \begin{scope}[on background layer]
      \fill[\cata0] (nw) rectangle (se);
      \tikzset{
        spath/split at intersections={f01}{lBA},
        spath/get components of={f01}\fcpts,
        spath/get components of={lBA}\lcpts,
      }
      \fill[\catb0] (lB) to[spath/use={\getComponentOf\lcpts1,weld}] (lf.center) to (f0) to cycle;
      \fill[\cata1] (lf.center) to[spath/use={\getComponentOf\lcpts2,weld}] (lA) to (f1) to cycle;
      \fill[\catb1] (lB) to[spath/use={\getComponentOf\lcpts1,weld}] (lf.center) to (f1) to (se) to (ne) to cycle;
    \end{scope}
  \end{tikzpicture}
  \quad
  \begin{tikzpicture}[scale=0.5,baseline=($(nw)!0.5!(se)$)]
    \CreateRect{5}{3}
    \path
      coordinate[label=above:$\strut f_0$] (f0) at (spath cs:north 0.5)
      coordinate[label=below:$\strut r_B$] (rB) at (spath cs:south 0.75)
      coordinate[label=above:$\strut r_A$] (rA) at (spath cs:north 0.25)
      coordinate[label=below:$\strut f_1$] (f1) at (spath cs:south 0.5)
    ;
    \draw[spath/save = f01] (f0) to (f1);
    \draw[spath/save = rAB] (rA) to[out=-90,in=90] (rB);
    \path[name intersections={of=f01 and rAB}]
      coordinate[dot,label=190:$r_f$] (rf) at (intersection-1)
    ;
    \begin{scope}[on background layer]
      \fill[\cata1] (nw) rectangle (se);
      \tikzset{
        spath/split at intersections={f01}{rAB},
        spath/get components of={f01}\fcpts,
        spath/get components of={rAB}\rcpts,
      }
      \fill[\cata0] (rA) to[spath/use={\getComponentOf\rcpts1,weld}] (rf.center) to (f0) to cycle;
      \fill[\catb0] (f0) to (rf.center) to[spath/use={\getComponentOf\rcpts2,weld}] (rB) to (se) to (ne) to cycle;
      \fill[\catb1] (rf.center) to[spath/use={\getComponentOf\rcpts2,weld}] (rB) to (f1) to cycle;
    \end{scope}
  \end{tikzpicture}
}

\ol{
  \li{When the left mate is invertible, we say that \Mor{f}{A}{B} is \em{(left strong) and right lax}.}
  \li{When the right mate is invertible, we say that \Mor{f}{A}{B} is \em{(right strong) and left lax}.}
  \li{When both mates are invertible, we say that \Mor{f}{A}{B} is \em{strong}.}
}
